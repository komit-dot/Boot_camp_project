<div class="col-lg-10">
  <%= search_form_for @q, url: :admin_students  do |form| %>
   <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name_cont, class: "form-control" %>
   </div>
   <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name_cont, class: "form-control" %>
   </div>
   <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email_cont, class: "form-control" %>
   </div>
   <div class="form-group">
    <%= form.label :local_address %>
    <%= form.text_field :local_address_cont, class: "form-control" %>
   </div>
   <div class="form-group">
    <%= form.submit class: "btn btn-primary btn-lg" %>
   </div>
  <% end %>
  <p><%=notice%></p>
  <h1>Listing Students</h1>
  <%= link_to 'New Student', new_admin_student_path, class: "btn btn-primary btn-lg" %>
  <table class="table table-bordered">
    <thead>
     <tr>
      <th><h3>First Name  &nbsp &nbsp </h3></th>
      <th><h3>Last Name &nbsp &nbsp</h3></th>
      <th><h3>Email Address&nbsp &nbsp</h3></th>
      <th><h3>Address&nbsp &nbsp</h3></th>
      <th><h3>Contact Number&nbsp &nbsp</h3></th>
      <th><h3>Date of Birth&nbsp &nbsp</h3></th>
      <th colspan="3"><h3>Actions</h3></th>

     </tr>
    </thead>
    <tbody>
    	<%@students.each do |student| %>
     <tr>
      <td><%= student.full_name %></td>
      <td><%= student.last_name %></td> 
      <td><%= student.email %></td>
      <td><%= student.local_address %></td>
      <td><%= student.permanent_contact_number %></td>
      <td><%= student.datee_of_birth %></td>
      <td><%= link_to 'View', admin_student_path(student)%></td>
      <td><%= link_to 'Edit', edit_admin_student_path(student)%></td>
      <!-- <td><%#= link_to 'Delete', student_path(student), method: :delete %></td> -->
      <td><%= button_to 'Delete', admin_student_path(student), method: :delete, class: 'btn btn-danger', form: {data: { turbo_confirm: "Are you sure?" }}  %></td>


     </tr>
     <%end%>
    </tbody>
  </table>
  <%= paginate @students %>
</div>